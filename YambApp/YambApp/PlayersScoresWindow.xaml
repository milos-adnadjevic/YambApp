<Window x:Class="YambApp.PlayersScoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YambApp"
         xmlns:viewmodel="clr-namespace:YambApp.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:PlayersScoresViewModel}"
        mc:Ignorable="d"
        Title="PlayersScoresWindow" Height="450" Width="800">
    <Grid>

        <DataGrid x:Name="playersScores" AutoGenerateColumns="False" CanUserAddRows="False" HorizontalAlignment="Center" IsReadOnly="True" CanUserSortColumns="True" CanUserReorderColumns="False" CanUserResizeColumns="False"  CanUserResizeRows="False" CanUserDeleteRows="False" RowHeight="65" VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="35" Width="800" ItemsSource="{Binding AllScores}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="1*"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Scores}" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
