                        <Grid Margin="10">
                                <!-- Dice Image -->
                            <Border Width="80" Height="80" CornerRadius="24" BorderBrush="{Binding Dice4Background, Mode=TwoWay}" BorderThickness="3" >
                                <Border.Background>
                                    <ImageBrush ImageSource="{Binding FourthDiceImage}" Stretch="UniformToFill" />
                                </Border.Background>
                            </Border>
                            <!-- TextBox behind the dice -->
                                <TextBox Text="{Binding Dice4Value}"
                             IsReadOnly="True" Width="80" Height="40" FontSize="20" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,-30,0" Visibility="Hidden"/>
