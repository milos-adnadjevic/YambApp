                <StackPanel Orientation="Horizontal"  Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ProgressBar Minimum="0" Maximum="3" Value="{Binding CurrentRoll}" Height="20" Width="560" Margin="55,10,0,0"  Grid.Row="0" Background="White" Foreground="#FF3B5998" BorderBrush="#FF3B5998" />
                        <TextBlock Text="{Binding StatusMessage}" Foreground="Red" Margin="55,10,0,0" TextAlignment="Center"  Grid.Row="1" FontSize="20"/>
                    </Grid>
                </StackPanel>


            </Grid>



        </Grid>
    </ScrollViewer>
</Window>


