                                    Height="40"
                                    Width="80"
                                    Background="#FF3B5998" 
                                    Foreground="White" 
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Padding="10">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Control.Template">
                                            <Setter.Value>
